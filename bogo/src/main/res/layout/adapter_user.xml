<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.gcssloop.widget.RCRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:round_corner="10dp">

        <ImageView
            android:background="@drawable/ic_head_mr_720"
            android:scaleType="centerCrop"
            android:id="@+id/pagemsg_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_beckoning_num"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pagemsg_view_dian"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/bg_green_num" />

            <TextView
                android:id="@+id/pagemsg_view_isonline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="@string/userinfo_bar_isonLine"
                android:textSize="8sp"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/text_size_12"
                android:id="@+id/pagemsg_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:maxWidth="50dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:maxLines="1"/>

            <!--<TextView-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_toRightOf="@+id/pagemsg_view_name"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:textSize="@dimen/text_size_10"-->
            <!--android:id="@+id/tv_level"-->
            <!--android:paddingBottom="1dp"-->
            <!--android:paddingTop="1dp"-->
            <!--android:paddingRight="8dp"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:textColor="@color/white"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
            <com.uliaovideo.videoline.widget.BGLevelTextView
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pagemsg_view_name"
                android:id="@+id/tv_level"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/pagemsg_view_nice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="@string/test_number"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_toLeftOf="@+id/pagemsg_view_nice"
                android:layout_width="16dp"
                android:layout_centerVertical="true"
                android:layout_height="16dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/good_appraise"/>

        </RelativeLayout>
    </com.gcssloop.widget.RCRelativeLayout>


</RelativeLayout>